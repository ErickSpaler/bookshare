<div class="container mt-5">
  <div class="row">


    <div class="col-3">
    <% if @book.image.nil? %>
        <%= image_tag 'https://cdn-icons-png.flaticon.com/512/2232/2232688.png' %>
        <% else  %>
        <%= image_tag @book.image %>
        <% end %>
    </div>


    <div class="card-book col-8">
      <div class="card-product-infos">
      <h3>Book: <%= @book.title %></h3>
      <p>Author Name: <%= @book.author_name %></p>
      <p>Description: <%= @book.description %></p>
      <p>Published Year: <%= @book.published_year %></p>
      <p>Genre: <%= @book.genre %></p>

      <% if @book.rents.count.zero? %>
        <%= simple_form_for [@book, @rent] do |f| %>
          <%= f.submit "Quero aluguar", class: "btn btn-dark" %>
        <% end %>
      <% else %>
        <span class="badge rounded-pill text-bg-danger">Título indisponível</span>
      <% end %>
    </div>
    </div>
  </div>

  <div class="mt-3">
  <h3>Price: <%= @book.price %> </h3>
  </div>



    <div class="card-product-infos">
    <h4>User Info</h4>
    <p>Name: <%= @book.user.name %></p>
    <p>Address: <%= @book.user.address %></p>
    </div>



<%= link_to "Back to home", books_path, class: "btn btn-dark" %>


</div>
